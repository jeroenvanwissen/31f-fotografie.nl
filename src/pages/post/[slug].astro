---
import { getEntryBySlug } from 'astro:content';
import { getSortedEntriesFromCollection } from '@lib/util';
import Layout from '@layouts/Layout.astro';

export async function getStaticPaths() {
	return (await getSortedEntriesFromCollection('post')).map((entry) => {
		return {
			params: { slug: entry.slug },
			props: { entry },
		};
	});
}

const { slug } = Astro.params;
if (slug === undefined) return Astro.redirect('/404');

const entry = await getEntryBySlug('post', slug);
if (entry === undefined) return Astro.redirect('/404');
const { Content } = await entry.render();
